<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <filter>
        <filter-name>restFilter</filter-name>
        <filter-class>com.hair.business.rest.RestEndpointServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>restFilter</filter-name>
        <url-pattern>/api/v1/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>privilegedUserFilter</filter-name>
        <filter-class>com.hair.business.rest.PrivilegedEndpointServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>privilegedUserFilter</filter-name>
        <url-pattern>/api/v1/admin/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>defaultFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>defaultFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>firebase</servlet-name>
        <servlet-class>com.hair.business.rest.resources.FirebaseWidgetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>firebase</servlet-name>
        <url-pattern>/firebase</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hair.business.rest.resources.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.hair.business.app.AppConfigurationMain</listener-class>
    </listener>

</web-app>